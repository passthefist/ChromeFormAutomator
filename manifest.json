{
  "name": "Form Automator",
  "description": "Capture and automate forms",
  "version": "2.0",
  "permissions": [
    "activeTab",
    "file://*",
    "storage",
    "tabs"
  ],
  "background": {
    "scripts": ["popup.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Capture and automate forms",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["main.js","content.js"],
    "run_at": "document_end"
  }],
  "manifest_version": 2
}
